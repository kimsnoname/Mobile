            android:gravity="center"
            android:includeFontPadding="false"
            android:letterSpacing="-0.05"
            android:text="@string/chart_unitMinute_60"
            android:textColor="@color/color_chart_unit_selector"
            android:textSize="14dp" />

        <RadioButton
            android:id="@+id/rb_chartUnitSelector_minute240"
            style="@style/NoIconRadioButton"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/back_chart_unit_button"
            android:fontFamily="@font/noto_sans_kr_regular"
            android:gravity="center"
            android:includeFontPadding="false"
            android:letterSpacing="-0.05"
            android:text="@string/chart_unitMinute_240"
            android:textColor="@color/color_chart_unit_selector"
            android:textSize="14dp" />

    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>